2. Clases y Objetos
java
public class Person {
    String name;
    int age;

    public Person(String name, int age) {
        this.name = name;
        this.age = age;
    }

    public void display() {
        System.out.println("Name: " + name + ", Age: " + age);
    }

    public static void main(String[] args) {
        Person p = new Person("Alice", 30);
        p.display();
    }
}
3. Herencia


java
class Animal {
    void eat() {
        System.out.println("This animal eats food.");
    }
}

class Dog extends Animal {
    void bark() {
        System.out.println("The dog barks.");
    }

    public static void main(String[] args) {
        Dog d = new Dog();
        d.eat();
        d.bark();
    }
}



4. Polimorfismo
java
class Animal {
    void sound() {
        System.out.println("Animal makes a sound.");
    }
}

class Cat extends Animal {
    void sound() {
        System.out.println("Cat meows.");
    }
}

class Dog extends Animal {
    void sound() {
        System.out.println("Dog barks.");
    }

    public static void main(String[] args) {
        Animal a;
        a = new Cat();
        a.sound();
        a = new Dog();
        a.sound();
    }
}


5. Encapsulaci√≥n
java
class Person {
    private String name;
    private int age;

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        if (age > 0) {
            this.age = age;
        }
    }
}

public class Test {
    public static void main(String[] args) {
        Person p = new Person();
        p.setName("Alice");
        p.setAge(30);
        System.out.println("Name: " + p.getName() + ", Age: " + p.getAge());
    }
}




6. Interfaces
java
